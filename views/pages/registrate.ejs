<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>
  <body>
    <header>
      <%- include('../partials/header'); %>
    </header>
        
    <main style="height: 30%;" >
        <div class="container" style="padding: 44px;">
            <div class="card-form container">
                <div class="row justify-content-center align-items-center">
                    <div class="col-md-6 col-sm-8">
         
            <div class="card-header bg-warning">
            
                        <h2 class="text-center">Registro de Usuario</h2>
                    </div>
                    <div class="card-body" style="background-color: blueviolet;">
                        <form  id="loginForm" action="http://localhost:4000/api/users" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" id="user" placeholder="Indique su nombre" name="user" required>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="email" class="form-control" id="email" placeholder="Indique su E-mail" name="email" required>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" placeholder="Indique su contraseña" name="password" required>
                            </div>
                            <br>
                            <div class="form-group">
                                <input type="password" class="form-control" id="confirmar" placeholder="Repita su contraseña" name="confirmar" required>
                            </div>
                            <br>
                            <div class="text-center" style="padding:5px;">
                                <button type="submit" class="btn btn-warning btn-block">Registrarse</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
    <div class="bg-dark py-3">
        <%- include('../partials/training'); %>  
      </div>

    <footer class="bg-dark py-3">
      <%- include('../partials/footer'); %>
    </footer>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous">
</script>
<script>
    const validar = ()=>{

    const password = document.querySelector('#password')
    const confirmar = document.querySelector('#confirmar')
   
    if (password != confirmar) {
        alert('Las contraseñas no coinciden')
        }
        
    

    const formulario = document.querySelector('#loginForm') 
    formulario.addEventListener('submit', (e) => {
        e.preventDefault()
        
        const datos = new FormData(formulario)
        
        fetch('http://localhost:4000/api/users', {
            method: 'POST',
            body: datos
            })
            .then(response => response.json())
            .then(data => console.log(data))
       })
    }
</script>

    
</html>
